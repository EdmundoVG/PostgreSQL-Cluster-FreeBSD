#!/bin/sh
DASHBOARD_DIR="/usr/local/www/monitoring"
DASHBOARD_FILE="$DASHBOARD_DIR/index.html"
AUDIT_LOG="/var/log/security_audit.json"
METRICS_LOG="/var/log/postgres_metrics.log"
HEALTH_LOG="/var/log/health_checks.log"

mkdir -p "$DASHBOARD_DIR"

# Obtener m√©tricas actuales de cada servidor
MASTER_METRICS=$(grep "pg-master-01" "$METRICS_LOG" 2>/dev/null | tail -1 || echo "N/A")
SLAVE1_METRICS=$(grep "pg-slave-01" "$METRICS_LOG" 2>/dev/null | tail -1 || echo "N/A")
SLAVE2_METRICS=$(grep "pg-slave-02" "$METRICS_LOG" 2>/dev/null | tail -1 || echo "N/A")

# Estad√≠sticas de auditor√≠a del cluster
if [ -f "$AUDIT_LOG" ]; then
    MASTER_EVENTS=$(grep -c '^{' "$AUDIT_LOG" 2>/dev/null || echo 0)
    MASTER_CRITICAL=$(grep '"severity":"CRITICAL"' "$AUDIT_LOG" 2>/dev/null | wc -l | tr -d ' ')
    MASTER_WARNING=$(grep '"severity":"WARNING"' "$AUDIT_LOG" 2>/dev/null | wc -l | tr -d ' ')
    MASTER_ERROR=$(grep '"severity":"ERROR"' "$AUDIT_LOG" 2>/dev/null | wc -l | tr -d ' ')
else
    MASTER_EVENTS="0"; MASTER_CRITICAL="0"; MASTER_WARNING="0"; MASTER_ERROR="0"
fi

# Obtener datos de slaves
SLAVE1_EVENTS=$(ssh -o StrictHostKeyChecking=no freebsd@10.0.1.116 'grep -c "^{" /var/log/security_audit.json 2>/dev/null || echo 0')
SLAVE2_EVENTS=$(ssh -o StrictHostKeyChecking=no freebsd@10.0.1.25 'grep -c "^{" /var/log/security_audit.json 2>/dev/null || echo 0')

# Estad√≠sticas de health checks
LAST_HEALTH_CHECK=$(tail -1 "$HEALTH_LOG" 2>/dev/null | cut -d',' -f1 || echo "N/A")
TOTAL_HEALTH_ENTRIES=$(wc -l < "$HEALTH_LOG" 2>/dev/null || echo 0)

# Obtener eventos recientes de auditor√≠a espec√≠ficos
RECENT_SECURITY_EVENTS=$(grep '"event_type":"SECURITY"' "$AUDIT_LOG" 2>/dev/null | tail -3 | while read line; do
    echo "$line" | sed 's/^{//' | sed 's/},$//' | grep -o '"event_name":"[^"]*"' | sed 's/"event_name":"//;s/"//'
done | tr '\n' ',' | sed 's/,$//')

RECENT_DATABASE_EVENTS=$(grep '"event_type":"DATABASE"' "$AUDIT_LOG" 2>/dev/null | tail -3 | while read line; do
    echo "$line" | sed 's/^{//' | sed 's/},$//' | grep -o '"event_name":"[^"]*"' | sed 's/"event_name":"//;s/"//'
done | tr '\n' ',' | sed 's/,$//')

# Calcular totales para el dashboard
SLAVE1_CRITICAL=$(ssh -o StrictHostKeyChecking=no freebsd@10.0.1.116 'grep "\"severity\":\"CRITICAL\"" /var/log/security_audit.json 2>/dev/null | wc -l || echo 0' | tr -d ' \n' | grep -o '[0-9]*' || echo 0)
SLAVE2_CRITICAL=$(ssh -o StrictHostKeyChecking=no freebsd@10.0.1.25 'grep "\"severity\":\"CRITICAL\"" /var/log/security_audit.json 2>/dev/null | wc -l || echo 0' | tr -d ' \n' | grep -o '[0-9]*' || echo 0)
SLAVE1_WARNING=$(ssh -o StrictHostKeyChecking=no freebsd@10.0.1.116 'grep "\"severity\":\"WARNING\"" /var/log/security_audit.json 2>/dev/null | wc -l || echo 0' | tr -d ' \n' | grep -o '[0-9]*' || echo 0)
SLAVE2_WARNING=$(ssh -o StrictHostKeyChecking=no freebsd@10.0.1.25 'grep "\"severity\":\"WARNING\"" /var/log/security_audit.json 2>/dev/null | wc -l || echo 0' | tr -d ' \n' | grep -o '[0-9]*' || echo 0)
SLAVE1_ERROR=$(ssh -o StrictHostKeyChecking=no freebsd@10.0.1.116 'grep "\"severity\":\"ERROR\"" /var/log/security_audit.json 2>/dev/null | wc -l || echo 0' | tr -d ' \n' | grep -o '[0-9]*' || echo 0)
SLAVE2_ERROR=$(ssh -o StrictHostKeyChecking=no freebsd@10.0.1.25 'grep "\"severity\":\"ERROR\"" /var/log/security_audit.json 2>/dev/null | wc -l || echo 0' | tr -d ' \n' | grep -o '[0-9]*' || echo 0)
TOTAL_EVENTS=$((MASTER_EVENTS + SLAVE1_EVENTS + SLAVE2_EVENTS))
TOTAL_CRITICAL=$((MASTER_CRITICAL + SLAVE1_CRITICAL + SLAVE2_CRITICAL))
TOTAL_WARNING=$((MASTER_WARNING + SLAVE1_WARNING + SLAVE2_WARNING))
TOTAL_ERROR=$((MASTER_ERROR + SLAVE1_ERROR + SLAVE2_ERROR))

# Crear dashboard limpio y profesional
cat > "$DASHBOARD_FILE" << HTMLEOF
