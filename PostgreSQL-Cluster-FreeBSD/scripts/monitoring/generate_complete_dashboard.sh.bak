        }
        .info-title { font-weight: bold; margin-bottom: 8px; }
        .info-value { font-size: 0.9em; opacity: 0.9; }
        
        .footer { text-align: center; margin-top: 30px; opacity: 0.8; font-size: 0.9em; }
        .live-indicator {
